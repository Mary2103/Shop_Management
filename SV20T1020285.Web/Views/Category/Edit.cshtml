@model SV20T1020285.DomainModels.Category
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryName)" value="@Model.CategoryName"/>
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color:#f00" })

            </div>
           
            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description"/>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>

                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>
        </form>
    </div>
</div>

